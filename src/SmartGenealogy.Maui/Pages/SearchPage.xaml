<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:SmartGenealogy.Maui.Resources.Strings"
             Title="{x:Static res:AppResource.Search}"
             x:Name="this"
             xmlns:view="clr-namespace:SmartGenealogy.Maui.ViewModels"
             xmlns:viewmodels="clr-namespace:SmartGenealogy.Maui.ViewModels"
             xmlns:controls="clr-namespace:SmartGenealogy.Maui.Controls"
             Shell.NavBarIsVisible="False"
             x:DataType="viewmodels:SearchViewModel"
             x:Class="SmartGenealogy.Maui.Pages.SearchPage">
    <VerticalStackLayout>
        <SearchBar x:Name="searchBar"
                   SearchCommand="{Binding PerformSearch}"
                   SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}" />
        <ListView x:Name="searchResults"
                  ItemsSource="{Binding SearchResults}" />
    </VerticalStackLayout>
</ContentPage>
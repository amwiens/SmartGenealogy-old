<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmartGenealogy.Maui.ViewModels"
             x:DataType="viewmodels:PersonViewModel"
             Style="{StaticResource DetailPageStyle}"
             x:Class="SmartGenealogy.Maui.Pages.PersonPage"
             Title="{Binding Person.Name}"
             xmlns:res="clr-namespace:SmartGenealogy.Maui.Resources.Strings"
             xmlns:controls="clr-namespace:SmartGenealogy.Maui.Controls">
    <ContentPage.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Background="{AppThemeBinding Light={StaticResource Grey1}, Dark={StaticResource Grey9}}">
        <ScrollView>
            <VerticalStackLayout Padding="16"
                                 Spacing="8">
                <Button Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PersonViewModel}}, Path=OpenWindowCommand}"
                        CommandParameter="{Binding}" />

                <Label Style="{StaticResource H6LabelStyle}"
                       Text="{Binding Person.Name}" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
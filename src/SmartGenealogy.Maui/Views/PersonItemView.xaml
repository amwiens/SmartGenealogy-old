<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="SmartGenealogy.Maui.Views.PersonItemView"
      xmlns:viewmodels="clr-namespace:SmartGenealogy.Maui.ViewModels"
      xmlns:views="clr-namespace:SmartGenealogy.Maui.Views"
      x:DataType="viewmodels:PersonViewModel"
      x:Name="self">
    <!--<Grid.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding NavigateToDetailCommand}" />
    </Grid.GestureRecognizers>-->
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="32" />
        <RowDefinition Height="28" />
    </Grid.RowDefinitions>

    <Label Text="{Binding Name}"
           HorizontalOptions="Start"
           LineBreakMode="TailTruncation"
           MaximumWidthRequest="{x:OnIdiom Phone=190, Default=264}"
           Style="{OnIdiom Default={StaticResource BodyXLLabelStyle}, Phone={StaticResource BodyLLabelStyle}}"
           Grid.Row="1" Grid.Column="0" />
</Grid>
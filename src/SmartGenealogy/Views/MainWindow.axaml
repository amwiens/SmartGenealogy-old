<Window x:Class="SmartGenealogy.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SmartGenealogy.Views"
        mc:Ignorable="d"
        x:Name="win"
        xmlns:vm="using:SmartGenealogy.ViewModels"
        Icon="/Assets/avalonia-logo.ico"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        Title="Smart Genealogy"
        TransparencyBackgroundFallback="Transparent">
  <Grid Margin="{Binding #win.OffScreenMargin}">
    <views:MainView />

    <Border Name="DragBorder"
            Background="Transparent"
            VerticalAlignment="Top"
            Height="19" />
  </Grid>
</Window>